package ex;

import java.util.Random;

public class Matriz5 {

	static Random r = new Random();
	public static void main(String[] args) {

		int menor, maior;
		
		int numbers;
		
		int[][] m = new int[5][5];
		
		for (int i = 0; i < 5; i++) {
			for (int j = 0; j < 5; j++) {
				m[i][j] = r.nextInt(100);
			}
		}
		
		for (int i = 0; i < 5; i++) {
			for (int j = 0; j < 5; j++) {
				m[i][j] = r.nextInt(100);
				System.out.println(m[i][j]);
				{
                    if(m[i][j] > maior)
                            maior = m[i][j];
                    else if (m[i][j] < menor)
                            menor = m[i][j];
                   
            }
		System.out.println("O maior numero é : " + maior);
		System.out.println("O menor numero é : " + menor);
			}
		}
	}
}